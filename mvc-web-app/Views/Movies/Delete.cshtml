@model MoviesEditViewModel
@{
    ViewData["Title"] = "Eliminar película";
}



<div class="card">
    <div class="card-title">
        <h2>
            Eliminar película
        </h2>
    </div>
    <div class="card-body">

        <form asp-action="Delete" , asp-controller="Movies" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <strong>@Html.DisplayFor(x => x.Name)</strong>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <strong>@Html.DisplayFor(x => x.Description)</strong>
            </div>

            @*<div class="form-group">
                    <label asp-for="GenderId" class="control-label"></label>
                    <select asp-for="GenderId" asp-items="Model.GenderList">
                    </select>
                </div>*@

            <div class="form-group">
                <p>
                    <strong> Desea eliminar la película ?</strong>
                </p>


                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>

        </form>

    </div>

</div>

<div>
    <a asp-action="Index">Regresar a listado</a>
</div>
